<!-- list News -->
@model List<News>
<style>
    .Fake-Text {
    color: #ff0000;
    background-color: #ffffff;
    border-color: #ff0000;
}
    .News_Time {
    font-size: 16px;
    color: #6c757d ;
    
}
</style>
<div class="container row text-center">
    @foreach (var item in Model)
    {
        <div class="  col-md-4 pb-1 pb-md-0  ">
            <div class="card">
               
                <img class="card-img-top" src="~/images/@item.image" alt="Card image cap" style="width: 100%; height: 200px; object-fit: cover;">

                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Content </p>
                    <p class=" News_Time">@item.CreatedAt</p>
                    @if(item.IsFake == true)
                    {
                        <p class="Fake-Text">This News is Fake</p> 
                    }
                    <a href="~/News/Edit/@item.Id" class="btn btn-primary">Edit</a>
                    <a class="btn btn-primary" href="~/News/Delete/@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
